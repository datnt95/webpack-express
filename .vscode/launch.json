  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NodeJS",
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server",
      "args": [
        "--config",
        "webpack.config.js",
        "--hot",
        "--progress"
      ],
      "autoAttachChildProcesses": true,
      "stopOnEntry": true
    }
  ]
}
